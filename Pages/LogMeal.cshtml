@page
@model FitAdvisor.Pages.LogMealModel
@{
    ViewData["Title"] = "Log a Meal";
}

<h2>Log a Meal</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.MealName"></label>
        <input asp-for="Input.MealName" class="form-control" />
        <span asp-validation-for="Input.MealName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Calories"></label>
        <input asp-for="Input.Calories" class="form-control" />
        <span asp-validation-for="Input.Calories" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Date"></label>
        <input asp-for="Input.Date" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Save Meal</button>
</form>

<hr />
<h3>Today's Meals</h3>
<p><strong>Total Calories Today:</strong> @Model.TotalCaloriesToday</p>
<p><strong>Easy Plan Target:</strong> @Model.SuggestedCalories</p>
<p><em>@Model.Message</em></p>


@if (Model.TodayMeals.Any())
{
    <ul>
        @foreach (var meal in Model.TodayMeals)
        {
            <li><strong>@meal.MealName</strong>: @meal.Calories calories</li>
        }
    </ul>
}
else
{
    <p>No meals logged today.</p>
}

