@page
@model FitAdvisor.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h2>User Profile</h2>

<div>
    <p><strong>Full Name:</strong> @Model.CurrentUser.Name</p>
    <p><strong>Email:</strong> @Model.CurrentUser.Email</p>
    <p><strong>Gender:</strong> @Model.CurrentUser.Gender</p>
    <p><strong>Current Weight:</strong> @Model.CurrentUser.Weight kg</p>
    <p><strong>Target Weight:</strong> @Model.CurrentUser.TargetWeight kg</p>
</div>

